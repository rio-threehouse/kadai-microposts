<% if current_user.like?(micropost) %>
  <%= form_for(current_user.favorit_microposts.find_by(micropost_id: micropost.id), html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= f.submit 'Unlike', class: 'btn btn-warning btn-xs' %>
  <% end %>
<% else %>
  <%= form_for(current_user.favorit_microposts.build) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= f.submit 'like', class: 'btn btn-primary btn-xs' %>
  <% end %>
<% end %>
